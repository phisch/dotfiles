[section/base]
include-directory = ~/.config/polybar/modules

[colors]
transparent = #00000000
foreground = #ffffff

color1 = #FF5555
color2 = #F1FA8C
color3 = #8BE9FD

[variables]
padding = 1
module_spacing = 1

[settings]
format-padding = ${variables.padding}

[global/wm]
margin-bottom = -5

[bar/default]
cursor-click = pointer
fixed-center = false
wm-restack = bspwm

font-0 = DejaVuSansMono:size=11;2
font-1 = MaterialDesignIcons:size=12;1
font-2 = MaterialDesignIcons:size=9;3

height = 36
module-margin = ${variables.module_spacing}

background = ${colors.transparent}
foreground = ${colors.foreground}

modules-left = bspwm
modules-center = xwindow
modules-right = volume filesystem cpu memory temperature date power

[bar/tower]
inherit = bar/default
modules-right = wireless-network-tower volume filesystem-tower cpu memory temperature date power

[bar/laptop]
inherit = bar/default
modules-right = wireless-network battery volume backlight filesystem cpu memory temperature date power

[module/filesystem-tower]
inherit = module/filesystem

mount-1 = /mnt/raid

[module/wireless-network-tower]
inherit = module/wireless-network
interface = wlp0s20u8